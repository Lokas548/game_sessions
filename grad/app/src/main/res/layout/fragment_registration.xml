<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".RegistrationActivity">

    <TextView
        android:id="@+id/tv_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Регистрация"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:textColor="@color/purple_red"
        android:textSize="30sp" />
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/tv_reg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:id="@+id/buttonLl"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/firstBtn"
            android:backgroundTint="@color/purple_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="По номеру"
            android:textSize="12sp"
            android:textColor="@color/beige"
            android:textAlignment="center" />
        <Button
            android:id="@+id/secondBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_red"
            android:textSize="12sp"
            android:text="По почте"
            android:layout_weight="1"
            android:textColor="@color/beige"
            android:textAlignment="center"
            app:layout_constraintRight_toRightOf="@+id/buttonsConstraint"
            />
    </LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/buttonLl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/firstEditText"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:autofillHints="a"
            android:hint="Введите почту"/>
        <EditText
            android:id="@+id/firstPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:autofillHints="a"
            android:hint="Пароль"
            android:inputType="textPassword" />
        <EditText
            android:id="@+id/secondPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:autofillHints="a"
            android:inputType="textPassword"
            android:hint="Еще раз пароль" />
        <Button
            android:id="@+id/registrationBtn"
            android:layout_marginTop="25dp"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:backgroundTint="@color/purple_red"
            android:text="Зарегистрироваться"
            android:textColor="@color/beige"/>

        <Button
            android:id="@+id/goToAuth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Уже есть аккаунт"
            android:textSize="6dp"
            android:textColor="@color/light_blue">

        </Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>